<Window x:Class="DartTracker.Views.ExitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DartTracker.Views"
        mc:Ignorable="d"
        Title="ExitWindow" Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="40"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="3" VerticalAlignment="Center" HorizontalAlignment="Center" Name="WinnerLabel"> x heeft gewonnen </TextBlock>
        <Button Grid.Row="2" Grid.Column="0" MinWidth="60" VerticalAlignment="Center" HorizontalAlignment="Center" Content="New Game" Click="ButtonBase_OnClick_NewGame"/>
        <Button Grid.Column="2" Grid.Row="2" MinWidth="60" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Quit" Click="ButtonBase_OnClick_Quit"/>
    </Grid>
</Window>
